<div class="summary-container">
   <ul class="collection with-header">
        <li class="collection-header">
          <h4>{{trip.location}}</h4>
          <p><span for="img" aria-label="edit"> ✍ </span>Created by {{user.first_name}}</p>
        </li>


        <li class="collection-item">
          <p><span for="img" aria-label="calendar">📅  </span> {{trip.start_date}} - {{trip.end_date}}</p>
        </li>

        <li class="collection-item">
          <p><span for="img" aria-label="hotel"> 🏨 </span> {{trip.hotel.hotel_name}} - {{trip.hotel.hotel_address}} </p>
        </li>
        <li class="collection-header">
          <h5>Activities</h5>
        </li>
        <li class="collection-item">
          {{#each activities as |activity| }}
             <h6><span for="img" aria-label="activity"> 🚲 </span>{{activity.activity_date}} -
             <a href="/socialtrip/{{activity.id}}">{{activity.activity_name}}</a></h6>
           
          {{/each}}
        </li>
      </ul>

  <form id="itinerary-email">
    <input type="hidden" name="to_name">
    <input type="hidden" name="to_email">
    <input type="hidden" name="destination">
    <input type="hidden" name="start_date">
    <input type="hidden" name="end_date">
    <input type="hidden" name="message">
    <input type="hidden" name="from_name">
    <input type="submit" value="Email It!" class="waves-effect waves-light btn">
  </form>
</div>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
<script src="/js/email.js"></script>