<div class="form-group">
        <form>
            <label for="location">Where do you want to go?</label>
            <input type="text" id="city" name="location" placeholder="i.e. Los Angeles">
            
            <input type="text" class="datepicker" id="start-date" placeholder="Start Date">
            <input type="text" class="datepicker" id="end-date" placeholder="End Date"> 
            <button type="submit" class="btn btn-primary" id="search-hotel-button">Find Hotels</button>
        </form>
        <form>
            <input type="text" class="form-control input" id="cityActivity" />
            <button type="submit" class="btn btn-primary" id="search-activity-button">Find Activities</button>
        </form>
</div>

    <main id="content"></main>

