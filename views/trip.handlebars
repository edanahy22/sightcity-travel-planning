<div class="summary-container">
   <ul class="collection with-header">
        <li class="collection-header">
          <h4>{{location}}</h4>
          <p><span for="img" aria-label="edit"> ✍ </span>Created by {{user.first_name}}</p>
        </li>

        <li class="collection-item">
          <p><span for="img" aria-label="calendar">📅  </span> {{start_date}} - {{end_date}}</p>
        </li>

        <li class="collection-item">
          <p><span for="img" aria-label="hotel"> 🏨 </span> {{hotel.hotel_name}} - {{hotel.hotel_address}} </p>
        </li>
        <li class="collection-header">
          <h5>Activities</h5>
        </li>
        <li class="collection-item">
          {{#each activities as |activity| }}
             <h6><span for="img" aria-label="activity"> 🚲 </span>{{activity.activity_date}} -
             <a href="/socialtrip/{{activity.id}}">{{activity.activity_name}}</a></h6>
           
          {{/each}}
        </li>
      </ul>
</div>


