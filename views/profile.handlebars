<div>
  <div class="row mt-2">
    <div class="col m4">
      <h2>Your Upcoming Trips</h2>
      <hr>
      <div>
        {{#each trips as |trip| }}
        <h3>
          <span for="img" aria-label="pin">📍</span>
          <a href="/trip/{{trip.id}}">{{trip.location}}</a>
        </h3>
        <p class="ml-5">
          <!-- Pass needed_funding value to the helper function -->
          Trip Start: {{trip.start_date}}<br>
          Trip End: {{trip.end_date}}
        </p>
        
        <a class="btn-floating waves-effect waves-light red"  id="deleteBtn" onclick="delButtonHandler({{trip.id}})"><i class="material-icons">delete</i></a>
        {{/each}}
      </div>
    </div>

    <div class="col m7 ml-1 newtrip-prof-btn">
      <a class="waves-effect waves-light btn-large" href="/newtrip">Plan A New Trip</a>
    </div>
  </div>
</div>

</body>
<script src="/js/profile.js"></script>
