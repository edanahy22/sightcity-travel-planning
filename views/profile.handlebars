<div>
  <h2 class="page-title">Upcoming Trips</h2>
  <hr>
  <div class="row mt-2">

    <div class="col s12 m4 profile-cards">
      {{#if trips}}
        {{#each trips as |trip| }}

        <div class="card small all-trips-card">
          <div class="card-content">
            <span class="card-title" for="img" aria-label="pin">📍 <a
                href="/trip/{{trip.id}}">{{trip.location}}</a></span>
            <p class="ml-5 all-trips-text">
              <span>Trip Start: </span><b>{{trip.start_date}}</b>
            </p>
            <p class="ml-5">
              <span id="all-trips-text"> Trip End: </span><b>{{trip.end_date}}</b>
            </p>
            <div class="card-action right-align">
              <a class="btn-floating waves-effect waves-light red" id="deleteBtn"
                onclick="delButtonHandler({{trip.id}})"><i class="material-icons">delete</i></a>
            </div>
          </div>
        </div>
        {{/each}}
      {{else}}
      <div class="card large all-trips-card teal lighten-4">
          <div class="card-content center-align">
            <span class="card-title" for="img" aria-label="pin">📍 No trips planned...yet!</span>

            
          </div>
          <div class="card-action center-align">
              <p>Click "Plan a New Trip" to get started.</p>
          </div>
        </div>
      {{/if}}

        

    </div>

    <div class="col s12 m7 ml-1 newtrip-prof-btn">
      <a class="waves-effect waves-light btn-large" href="/newtrip">Plan A New Trip</a>
    </div>

    <div class="fixed-action-btn mobile-profile-btn">
      <a class='btn-floating btn-large waves-effect waves-light red pulse' href='/newtrip'><i
      class='material-icons'>flight_takeoff</i></a>
    </div>
  </div>


</div>

<script src="/js/profile.js"></script>